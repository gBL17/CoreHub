            </StackPane>

            <Label text="Pix" textFill="#1166B1" />
         </VBox>
         <!-- DOC -->
         <VBox alignment="CENTER">
            <StackPane prefHeight="70" prefWidth="70">
               <!-- Ícone visível -->
               <StackPane style="-fx-background-color: #1166B1; -fx-background-radius: 15;">
                  <ImageView fitHeight="61.0" fitWidth="61.0">
                     <image>
                        <Image url="@../assets/docIcon.png" />
                     </image>
