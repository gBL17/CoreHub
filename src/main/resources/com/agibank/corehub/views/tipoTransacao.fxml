            </StackPane>

            <Label text="DOC" textFill="#1166B1" />
         </VBox>
         <!-- TED -->
         <VBox alignment="CENTER">
            <StackPane prefHeight="70" prefWidth="70">
               <!-- Ícone visível -->
               <StackPane style="-fx-background-color: #1166B1; -fx-background-radius: 15;">
                  <ImageView fitHeight="58.0" fitWidth="51.0">
                     <image>
                        <Image url="@../assets/tedIcon.png" />
                     </image>
                  </ImageView>
               </StackPane>
               <!-- Botão invisível por cima -->
               <Button onAction="#navegarParaTransacaoTed"
                       style="-fx-background-color: transparent; -fx-cursor: hand;"
