      <VBox alignment="CENTER">
         <StackPane fx:id="pixButton" onMouseClicked="#navegarParaTransacaoPix" prefHeight="70" prefWidth="70" style="-fx-background-color: #1166B1; -fx-background-radius: 15; -fx-cursor: hand;">
            <ImageView fitHeight="53.0" fitWidth="56.0">
               <image>
                  <Image url="@../assets/pixIcon.png" />
               </image>
            </ImageView>
         </StackPane>
         <Label text="Pix" textFill="#1166B1" />
