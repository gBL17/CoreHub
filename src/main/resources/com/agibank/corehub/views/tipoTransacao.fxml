               <image>
                  <Image url="@../assets/docIcon.png" />
               </image>
            </ImageView>
         </StackPane>
         <Label text="DOC" textFill="#1166B1" />
      </VBox>

      <!-- TED -->
      <VBox alignment="CENTER">
         <StackPane fx:id="tedButton" onMouseClicked="#navegarParaTransacaoTed" prefHeight="70" prefWidth="70" style="-fx-background-color: #1166B1; -fx-background-radius: 15; -fx-cursor: hand;">
            <ImageView fitHeight="58.0" fitWidth="51.0">
               <image>
                  <Image url="@../assets/tedIcon.png" />
               </image>
            </ImageView>
         </StackPane>
         <Label text="TED" textFill="#1166B1" />
      </VBox>
   </HBox>

   </children>
