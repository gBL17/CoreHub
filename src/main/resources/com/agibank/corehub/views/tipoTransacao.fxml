      <!-- DOC -->
      <VBox alignment="CENTER">
         <StackPane fx:id="docButton" onMouseClicked="#navegarParaTransacaoDoc" prefHeight="70" prefWidth="70" style="-fx-background-color: #1166B1; -fx-background-radius: 15; -fx-cursor: hand;">
