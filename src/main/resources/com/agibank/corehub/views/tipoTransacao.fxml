      </ImageView>
      <Label layoutX="106.0" layoutY="138.0" prefHeight="25.0" prefWidth="200.0" style="-fx-font-size: 16px; -fx-text-fill: white;" text="Selecione a opção desejada" />

      <HBox alignment="CENTER" layoutX="76.0" layoutY="229.0" spacing="25.0">

         <!-- PIX -->
         <VBox alignment="CENTER">
            <StackPane prefHeight="70" prefWidth="70">
               <!-- Ícone visível -->
               <StackPane style="-fx-background-color: #1166B1; -fx-background-radius: 15;">
                  <ImageView fitHeight="53.0" fitWidth="56.0">
                     <image>
                        <Image url="@../assets/pixIcon.png" />
                     </image>
                  </ImageView>
               </StackPane>

               <!-- Botão invisível por cima -->
               <Button onAction="#navegarParaTransacaoPix"
                       style="-fx-background-color: transparent; -fx-cursor: hand;"
